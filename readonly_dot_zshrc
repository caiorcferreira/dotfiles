typeset -U path cdpath fpath manpath

# Add `~/bin` to the `$PATH`
export PATH="$HOME/bin:$PATH";
export PATH="$PATH:/opt/homebrew/bin"

# Load the shell dotfiles, and then some:
# * ~/.path can be used to extend `$PATH`.
# * ~/.extra can be used for other settings you donâ€™t want to commit.
for file in ~/.{path,bash_prompt,exports,aliases,functions,extra}; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;

# Oh-My-Zsh/Prezto calls compinit during initialization,
# calling it twice causes slight start up slowdown
# as all $fpath entries will be traversed again.
autoload -U compinit && compinit

# History options should be set in .zshrc and after oh-my-zsh sourcing.
# See https://github.com/nix-community/home-manager/issues/177.
HISTSIZE="10000"
SAVEHIST="10000"

HISTFILE="$HOME/.zsh_history"
mkdir -p "$(dirname "$HISTFILE")"

setopt HIST_FCNTL_LOCK
setopt HIST_IGNORE_DUPS
unsetopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE
unsetopt HIST_EXPIRE_DUPS_FIRST
setopt SHARE_HISTORY
unsetopt EXTENDED_HISTORY

"$(brew --prefix asdf)/libexec/asdf.sh"

java_setup="$HOME/.asdf/plugins/java/set-java-home.zsh"
if [[ -e "$java_setup" ]]; then
  . $java_setup
fi

if [[ $TERM != "dumb" ]]; then
  eval "$(starship init zsh)"

  source $HOME/.oh-my-zsh/custom/themes/powerlevel10k/powerlevel10k.zsh-theme
  source $HOME/.config/pk10/pk10-theme-settings.zsh
fi

if [[ $options[zle] = on ]]; then
  eval "$(atuin init zsh)"
fi

if [ -f "/Users/caioferreira/.config/fabric/fabric-bootstrap.inc" ]; then 
  . "/Users/caioferreira/.config/fabric/fabric-bootstrap.inc"
fi

# zoxide: https://github.com/ajeetdsouza/zoxide
# replaces `cd` with `z` 
eval "$(zoxide init --cmd cd zsh)"

# eza: https://github.com/eza-community/eza/blob/main/INSTALL.md#for-zsh-with-homebrew
# install shell completions for eza if it's installed
if type brew &>/dev/null; then
    FPATH="$(brew --prefix)/share/zsh/site-functions:${FPATH}"
    autoload -Uz compinit
    compinit
fi

# Add ghcs alias for copilot suggestion
if type gh &>/dev/null; then
  eval "$(gh copilot alias -- zsh)"
fi

# Computes syntax highlighting
# Should be at the end of the file
if type brew &>/dev/null; then
  source $HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
fi

if [ -f "$HOME/.cargo/env" ]; then
  . "$HOME/.cargo/env"
fi

if [ -f "/Users/caio.cavalcante/.config/op/plugins.sh" ]; then
  source /Users/caio.cavalcante/.config/op/plugins.sh
fi
